        function toggleControls(btn) { const c = btn.closest('.graph-wrapper').querySelector('.controls-wrapper'); c.style.display = (c.style.display === 'block') ? 'none' : 'block'; }

        async function fetchDataForGraph(btn) {
            const w = btn.closest('.graph-wrapper');
            const id = w.getAttribute('data-id');
            const bathId = w.querySelector('.bath-select').value;
            const start = w.querySelector('.start-date').value;
            const end = w.querySelector('.end-date').value;
            const chks = w.querySelectorAll('.param-chk:checked');

            if (chks.length === 0) return alert("Select parameter");

            const datasets = [];
            let allLabels = new Set();

            for (let [i, chk] of Array.from(chks).entries()) {
                try {
                    const res = await fetch('/analytics/get-data', {
                        method: 'POST', headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ bath_id: bathId, parameter: chk.value, start_date: start, end_date: end })
                    });
                    const json = await res.json();
                    if (json.data) {
                        const pts = json.data.map(r => {
                            const d = new Date(r.log_time);
                            const lbl = `${d.getMonth() + 1}/${d.getDate()} ${d.getHours()}:${String(d.getMinutes()).padStart(2, '0')}`;
                            allLabels.add(lbl);
                            return { x: lbl, y: parseFloat(r.value) };
                        });
                        datasets.push({ label: chk.parentElement.innerText.trim(), data: pts, borderColor: lineColors[i % lineColors.length], backgroundColor: lineColors[i % lineColors.length], tension: 0.2 });
                    }
                } catch (e) { }
            }

            if (chartInstances[id]) chartInstances[id].destroy();

            const ctx = w.querySelector('.graph-canvas').getContext('2d');
            chartInstances[id] = new Chart(ctx, {
                type: 'line',
                data: { labels: Array.from(allLabels).sort((a, b) => new Date(a) - new Date(b)), datasets: datasets },
                options: {
                    responsive: true, maintainAspectRatio: false,
                    layout: { padding: { bottom: 20, left: 10, right: 10, top: 10 } },
                    scales: { x: { ticks: { maxRotation: 45, minRotation: 45 } } }
                }
