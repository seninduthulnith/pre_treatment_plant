        function populateBaths(lSel, bSel) {
            bSel.innerHTML = "";
            const exclusions = ['motor', 'air line', 'water line'];
            const filteredBaths = allBaths.filter(b => {
                const name = b.bath_name.toLowerCase();
                const isCorrectLine = b.line_number == lSel.value;
                const isExcluded = exclusions.some(ex => name.includes(ex));
                return isCorrectLine && !isExcluded;
            });
