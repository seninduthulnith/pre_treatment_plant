        const chemDataRaw = <%- JSON.stringify(chemData) %>;
        const breakdownDataRaw = <%- JSON.stringify(breakdownData) %>;
        const lineColors = ['#007bff', '#e83e8c', '#28a745', '#fd7e14', '#6610f2', '#17a2b8', '#6f42c1', '#20c997'];
        const chartInstances = {};
        let graphToDelete = null;
        let chemDetailChart = null; // Instance for new chemical chart

        document.addEventListener("DOMContentLoaded", () => {
            new Sortable(document.getElementById('graphs-container'), { handle: '.drag-handle', animation: 150, onEnd: updateChartNumbers });
