        function updateChartNumbers() { document.querySelectorAll('.chart-title').forEach((t, i) => t.innerText = `Chart ${String(i + 1).padStart(2, '0')}`); }

        function addNewGraphSection() {
            const tmpl = document.getElementById('graph-template').content.cloneNode(true);
            const wrapper = tmpl.querySelector('.graph-wrapper');
            const id = 'g_' + Math.random().toString(36).substr(2, 9);
            wrapper.setAttribute('data-id', id);

            const today = new Date(); const lastWeek = new Date(); lastWeek.setDate(today.getDate() - 7);
            wrapper.querySelector('.end-date').valueAsDate = today; wrapper.querySelector('.start-date').valueAsDate = lastWeek;

            const lSel = wrapper.querySelector('.line-select'); const bSel = wrapper.querySelector('.bath-select');
            lSel.addEventListener('change', () => populateBaths(lSel, bSel));
