                months.forEach(m => { html += `<th>${m.display_date}</th>`; });
                html += '</tr></thead><tbody>';
                chemicals.forEach(chem => {
                    html += `<tr><td>${chem}</td>`;
                    months.forEach(m => { html += `<td>${m[chem]}</td>`; });
                    html += '</tr>';
                });
                html += '</tbody>';
                table.innerHTML = html;
            } catch (e) {
                console.error(e);
