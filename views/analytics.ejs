        // ==========================================
        // MONTHLY TREND (STACKED BAR) LOGIC
        // ==========================================
        let monthlyChartInstance = null;
        async function loadMonthlyTrend() {
            const start = document.getElementById('overview-start').value;
            const end = document.getElementById('overview-end').value;
            const line = document.getElementById('overview-line').value;

            try {
                const res = await fetch('/analytics/monthly-trend', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ start_date: start, end_date: end, line_number: line })
                });
                const json = await res.json();
                const months = json.months || [];
                const chemicals = json.chemicals || [];

                // Chart.js grouped (clustered) bar
                const ctx = document.getElementById('monthlyChart').getContext('2d');
                if (monthlyChartInstance) monthlyChartInstance.destroy();

                const labels = months.map(m => m.display_date);
                const datasets = chemicals.map((chem, idx) => ({
                    label: chem,
                    data: months.map(m => m[chem]),
                    backgroundColor: lineColors[idx % lineColors.length],
                    borderWidth: 1
                }));

                monthlyChartInstance = new Chart(ctx, {
                    type: 'bar',
                    data: { labels, datasets },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'top' },
                            title: { display: true, text: 'Monthly Consumption Trend (Clustered)' }
                        },
                        scales: {
                            x: { stacked: false },
                            y: { stacked: false, beginAtZero: true }
                        }
                    }
                });

                // Fill Monthly Data Table (chemicals as rows, months as columns)
                const table = document.getElementById('monthly-data-table');
