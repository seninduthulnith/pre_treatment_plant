        // Modal Logic
        function removeGraph(btn) { graphToDelete = btn.closest('.graph-wrapper'); document.getElementById('deleteModal').classList.add('active'); }
        function closeDeleteModal() { document.getElementById('deleteModal').classList.remove('active'); graphToDelete = null; }
        function confirmDelete() {
            if (graphToDelete) {
                const id = graphToDelete.getAttribute('data-id');
                if (chartInstances[id]) { chartInstances[id].destroy(); delete chartInstances[id]; }
                graphToDelete.remove(); updateChartNumbers();
            }
            closeDeleteModal();
