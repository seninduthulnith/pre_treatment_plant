        async function loadChemicalDetail() {
            const start = document.getElementById('detail-start').value;
            const end = document.getElementById('detail-end').value;
            const line = document.getElementById('detail-line').value;
            const bath = document.getElementById('detail-bath').value;
            const chem = document.getElementById('detail-chem').value;

            try {
                const res = await fetch('/analytics/chemical-stats', { // Uses the EXISTING route
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        start_date: start, end_date: end,
                        line_number: line, bath_id: bath, chemical_name: chem
                    })
                });
                const json = await res.json();

                // Update the table body with returned data
                const tbody = document.getElementById('detail-table-body');
                tbody.innerHTML = '';
                if (json.tableData && json.tableData.length > 0) {
                    json.tableData.forEach(row => {
                        const date = new Date(row.log_time);
                        const dateStr = `${date.toLocaleDateString()} ${date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}`;
                        const bathStr = row.line_number ? `Line ${row.line_number} - ${row.bath_name}` : row.bath_name;
                        const tr = `
                    <tr>
                        <td>${dateStr}</td>
                        <td>${bathStr}</td>
                        <td><strong>${row.chemical_name}</strong></td>
                        <td>${row.amount_added}</td>
                        <td>${row.username || 'Unknown'}</td>
                    </tr>
                `;
                        tbody.innerHTML += tr;
                    });
                } else {
                    tbody.innerHTML = '<tr><td colspan="5" style="text-align:center; padding:20px;">No data found</td></tr>';
                }

                const ctx = document.getElementById('detailChart').getContext('2d');
                if (detailChartInstance) detailChartInstance.destroy();

                // Clustered bar chart if 'all' chemicals selected, else single bar
                if (chem === 'all') {
                    // Build chemical list from tableData (matches table), and aggregate graphData by day/chemical
                    // 1. Get all unique days from tableData, format as yyyy-mm-dd for keying
                    function formatDayKey(dateStr) {
                        const d = new Date(dateStr);
                        return d.getFullYear() + '-' + String(d.getMonth() + 1).padStart(2, '0') + '-' + String(d.getDate()).padStart(2, '0');
                    }
                    // Use tableData for days to match table
                    const allDaysRaw = Array.from(new Set(json.tableData.map(d => formatDayKey(d.log_time)))).sort();
                    // 2. Get all unique chemicals from tableData (matches table)
                    const allChems = Array.from(new Set(json.tableData.map(d => d.chemical_name).filter(c => c && c !== 'null' && c !== 'undefined'))).sort();

                    // 3. Build a map: { dayKey: { chem1: value, chem2: value, ... } }
                    const dayMap = {};
                    allDaysRaw.forEach(dayKey => {
                        dayMap[dayKey] = {};
                        allChems.forEach(chemName => { dayMap[dayKey][chemName] = 0; });
                    });
                    // Use tableData for actual values (matches table exactly)
                    json.tableData.forEach(row => {
                        const dayKey = formatDayKey(row.log_time);
                        if (dayMap[dayKey] && row.chemical_name && allChems.includes(row.chemical_name)) {
                            dayMap[dayKey][row.chemical_name] += parseFloat(row.amount_added);
                        }
                    });

                    // 4. Prepare datasets for each chemical
                    const datasets = allChems.map((chemName, idx) => ({
                        label: chemName,
                        data: allDaysRaw.map(dayKey => dayMap[dayKey][chemName] || 0),
                        backgroundColor: lineColors[idx % lineColors.length],
                        borderColor: lineColors[idx % lineColors.length],
                        borderWidth: 1
                    }));

                    // 5. Format labels as dates
                    const labels = allDaysRaw.map(d => {
                        const dt = new Date(d);
                        return dt.toLocaleDateString();
                    });

                    detailChartInstance = new Chart(ctx, {
                        type: 'bar',
                        data: { labels, datasets },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { position: 'top' }, title: { display: true, text: 'Usage: All Chemicals (Clustered)' } },
                            scales: { x: { stacked: false }, y: { beginAtZero: true, stacked: false, title: { display: true, text: 'Amount' } } }
                        }
                    });
                } else {
                    // Single chemical: just plot as before
                    const labels = json.graphData.map(d => new Date(d.day).toLocaleDateString());
                    const dataPoints = json.graphData.map(d => d.daily_total);
                    detailChartInstance = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: `Usage: ${chem}`,
                                data: dataPoints,
                                backgroundColor: '#28a745',
                                borderColor: '#218838',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: { legend: { position: 'top' } },
                            scales: { y: { beginAtZero: true } }
                        }
                    });
                }

            } catch (e) { console.error(e); }
